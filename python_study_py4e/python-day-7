# HTTP request by python. Example to test endpoint
import socket

mysock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
print(mysock)
mysock = mysock.connect(('data.pr4e.org', 80))
print(mysock)
cmd = 'GET http://data.pr4e.org/romeo.txt HTTP/1.0\n\n'.encode()
print(mysock)
print(cmd)
mysock.send(cmd)

while True:
    data = mysock.recv(512)
    if len(data < 1):
        break
    print(data.decode())
mysock.close()
